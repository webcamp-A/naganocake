<div class="container">

  <div class="row mb-2">
    <h4>ショッピングカート</h4>
    <div class="ml-auto">
      <%= link_to "カートを空にする", all_destroy_cart_items_path, method: :delete, class:"btn btn-danger btn-sm" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr bgcolor="#f4f4f4">
          <th scope="col">商品名</th>
          <th scope="col">単価（税込）</th>
          <th scope="col">数量</th>
          <th scope="col">小計</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
      <% total = 0 %>
      <% if current_customer.cart_items.present? %>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td scope="col">
            <%= image_tag(cart_item.item.image, size:"60x50", fallback: "noimage.jpg") %>
            <%= cart_item.item.name %>
          </td>
          <td scope="col"><%= cart_item.item.add_tax_price %></td>
          <td scope="col">
            <%= form_with model:cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
              <%= f.number_field :amount, min:1, max:10, id:"amount_cart" %>
              <%= f.submit "変更", class:"btn btn-success" %>
            <% end %>
          </td>
          <% subtotal = cart_item.item.add_tax_price*cart_item.amount %>
          <td scope="col"><%= subtotal %></td>
          <td scope="col"><%= link_to '削除する', cart_item_path(cart_item.id,cart_item), method: :delete, class:"btn btn-danger" %></td>
        </tr>
          <% total += ((cart_item.item.price*cart_item.amount)*1.1).floor %>
        <% end %>
      <% end %>



      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="mr-auto">
      <%= link_to '買い物を続ける', root_path, class:"btn btn-success btn-sm" %>
    </div>
    <div class="d-flex align-items-right col-3">
      <table class="table table-bordered">
        <tr>
          <td bgcolor="#f4f4f4"class="col">合計金額</td>
          <td class="col"><%= total %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mb-3">
    <% if @cart_items.present? %>
      <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
    <% end %>
  </div>
</div>
