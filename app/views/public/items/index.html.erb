<div class="container">

  <h4>商品一覧（全<%= @items_count %>件）</h4>
  
  <div class="row mt-3">

    <% @items.each do |item| %>
    <div class="col-3">
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.get_image,size:"200x150" %><br>
        <%= item.name %><br>
      <% end %>
      ￥<%= item.price %>
    </div>
    <% end %>
      
  </div>
  
  <div class="row mt-3">
    <%= paginate @items %>
  </div>
  
</div>