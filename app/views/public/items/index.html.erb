<div class="container">

  <h4>商品一覧</h4>
  <div class="row">
    
      <% @items.each do |item| %>
      <div class="col-3">
        <%= image_tag item.get_image,size:"200x150" %><br>
        <%= link_to item_path(item.id) do %>
          <%= item.name %><br>
        <% end %>
        <%= item.price %>
      </div>
      <% end %>
      
  </div>
</div>