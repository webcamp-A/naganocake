<div class="container">
  
  <h4>注文履歴一覧</h4>
  <% @orders.each do |order| %>
    <table>
      <thead>
        <tr>
          <th scope="col">注文日</th>
          <th scope="col">配送先</th>
          <th scope="col">注文商品</th>
          <th scope="col">支払金額</th>
          <th scope="col">注文詳細</th>
        </tr>
      </thead> 
      <tbody>
        <tr>
          <td scope="col"><%= order.create_at %></td>
          <td scope="col">
            <%= order.post_code %><br>
            <%= order.address %>
          </td>
          <td scope="col"><%= order.item_id.name %></td>
          <td scope="col"><%= order.payment %>円</td>
          <td scope="col"><%= link_to '表示する', order_path(order.id), class:"btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>