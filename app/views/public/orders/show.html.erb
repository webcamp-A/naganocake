<div class="container">
  <div class="row mt-3">
    <h4>注文履歴詳細</h4>
  </div>

  <div class="row mt-3">
    <div class="col-6">
      <h5>注文情報</h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th bgcolor="#f4f4f4",scope="col-1">注文日</th>
            <td scope="col-4"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th bgcolor="#f4f4f4",scope="col-1">配送先</th>
            <td scope="col-4">
              <%= @order.postal_code %><br>
              <%= @order.address %>
            </td>
          </tr>
          <tr>
            <th bgcolor="#f4f4f4",scope="col-1">支払方法</th>
            <td scope="col-4"><%= @order.payment_method_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <h5>請求情報</h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th bgcolor="#f4f4f4",scope="col-1">商品合計</th>
            <td scope="col-1"><%= @order.payment - 800 %></td>
          </tr>
          <tr>
            <th bgcolor="#f4f4f4",scope="col-1">配送料</th>
            <td scope="col-1"><%= @order.postage %></td>
          </tr>
          <tr>
            <th bgcolor="#f4f4f4",scope="col-1">ご請求額</th>
            <td scope="col-1"><%= @order.payment  %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-7">
      <h5>注文内容</h5>
      <table class="table table-bordered">
        <tbody>
          <tr bgcolor="#f4f4f4">
            <th scope="col-4">商品</th>
            <th scope="col-2">単価（税込）</th>
            <th scope="col-1">個数</th>
            <th scope="col-1">小計</th>
          </tr>
          <% @order_details.each do |order_detail| %>
          <tr>
            <td scope="col-4"><%= order_detail.item.name %></td>
            <td scope="col-2"><%= order_detail.item.add_tax_price %></td>
            <td scope="col-1"><%= order_detail.quantity %></td>
            <td scope="col-1"><%= order_detail.item.add_tax_price*order_detail.quantity %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>