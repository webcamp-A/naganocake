<div class="container">
  <h4>注文情報確認</h4>
  <div class="row">
    <div class="col-8">
      <table class="table table-bordered">
        <thead>
          <tr bgcolor="#f4f4f4">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
          <% total = 0 %>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag(cart_item.item.image, size:"60x50",fallback:"noimage.jpg") %>
              <%= cart_item.item.name %>
            </td>
            <td><%= (cart_item.item.add_tax_price).floor %></td>
            <td><%= cart_item.amount %></td>
            <% subtotal = cart_item.item.add_tax_price*cart_item.amount %>
            <td><%= subtotal %></td>
          </tr>
            <% total += ((cart_item.item.price*cart_item.amount)*1.1).floor %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-3">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th bgcolor="#f4f4f4">送料</th>
              <% @order.postage = 800 %>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th bgcolor="#f4f4f4">商品合計</th>
            <td><%= total %></td>
          </tr>
          <tr>
            <th bgcolor="#f4f4f4">請求金額</th>
            <% @order.payment = total + @order.postage %>
            <td><%= @order.payment %></td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
  <div class="row">
    <div class="col-2">
      <h5>支払方法</h5>
    </div>
    <div class="col-3">
      <%= @order.payment_method_i18n %>
    </div>
  </div>
  <div class="row">
    <div class="col-2">
      <h5>お届け先</h5>
    </div>
    <div class="col-6">
      〒<%= @order.postal_code %>
      <%= @order.address %>
      <%= @order.addressee %>
    </div>
  </div>

  <div class="row justify-content-center">
    <%= form_with model:@order, url: orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field:customer_id %>
      <%= f.hidden_field:postage %>
      <%= f.hidden_field:payment_method %>
      <%= f.hidden_field:postal_code %>
      <%= f.hidden_field:address %>
      <%= f.hidden_field:addressee %>
      <%= f.hidden_field:payment %>
      <%= f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>
  </div>

</div>
