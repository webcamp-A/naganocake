<div class="container">
  <div class="row">
    <h4 class="my-3">商品詳細</h4>
  </div>
  
  <div class="row d-flex justify-content-center">
    
    <div class="col-3 text-center">
      <%= image_tag @item.get_image,size:"200x150" %>
    </div>

    <div class="col-5">
      <table>
        <tr>
          <th style="width:45%">商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜き価格)</td>
          <td><%= (@item.add_tax_price).round %> ( <%= @item.price %> )円</td>
        </tr>
      </table>
    </div>

  </div>

  <div class="text-center mt-3">
    <%= link_to '編集する', edit_admin_item_path, class:"btn btn-success" %>
  </div>

</div>