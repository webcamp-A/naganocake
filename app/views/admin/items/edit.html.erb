<div class="container">
  <h3>admin 商品編集</h3>
  
  <%= form_with model:@item, url: admin_item_path do |f| %>
  
    <div class="form-group row">
      <%= f.label :"商品画像", class:"col-2 col-form-label" %>
      <%= f.file_field :image,accept:"image/*" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :"商品名", class:"col-2 col-form-label" %>
      <%= f.text_field :name, class:"col-3" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :"商品説明",class:"col-2 col-form-label" %>
      <%= f.text_area :introduction, class:"col-3" %>
    </div>
    
    <div class="form-group row">
      <%= f.label :"税抜価格", class:"col-2 col-form-label" %>
      <%= f.text_field :price, class:"col-3" %>円
    </div>

      <%= f.submit '変更を保存', class:"btn btn-primary" %>
  <% end %>
</div>