<div class="container">

  <div class="row">
    <h4>商品一覧</h4>

    <%= link_to "＋", new_admin_item_path, class:"btn btn-outline-secondary btn-sm ml-auto mb-2" %>

    <table class="table">
      <thead>
        <tr bgcolor="#f4f4f4">
          <th scope="col">商品ID</th>
          <th scope="col">商品名</th>
          <th scope="col">税抜価格</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td scope="row"><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
        </tr>
        <% end %>
        
      </tbody>
    </table>
    <%= paginate @items %>
  </div>
</div>
