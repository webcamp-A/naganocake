<div class="container">

  <h4>admin　会員一覧</h4>
  
  <table class="table">
    <thead>
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% @customers.each do |customer| %>
        <th scope="row"><%= customer.id %></th>
        <td><%= customer.last_name %><%= customer.first_name %></td>
        <td><%= customer.email %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
</div>