<div class="container">
  <h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

  <%= form_with model:@customer, url:admin_customer_path do |f| %>
    <div class="row mb-2">
      <%= f.label :"氏名", class:"col-2 col-form-label" %>
      <%= f.text_field :last_name, class:"col-2 mr-3" %>
      <%= f.text_field :first_name, class:"col-2" %>
    </div>

    <div class="row mb-2">
      <%= f.label :"フリガナ", class:"col-2 col-form-label" %>
      <%= f.text_field :last_name_kana, class:"col-2 mr-3" %>
      <%= f.text_field :first_name_kana, class:"col-2" %>
    </div>

    <div class="row mb-2">
      <%= f.label :"郵便番号", class:"col-2 col-form-label" %>
      <%= f.text_field :postal_code, class:"col-2" %>
    </div>

    <div class="row mb-2">
      <%= f.label :"住所", class:"col-2 col-form-label" %>
      <%= f.text_field :address, class:"col-4" %>
    </div>

    <div class="row mb-2">
      <%= f.label :"電話番号", class:"col-2 col-form-label" %>
      <%= f.text_field :telephone_number, class:"col-2" %>
    </div>

    <div class="row mb-2">
      <%= f.label :"メールアドレス", class:"col-2 col-form-label" %>
      <%= f.email_field :email, class:"col-2" %>
    </div>

    <div class="row">
      <p>会員ステータス</p>
      <%= f.radio_button:is_deleted, :false %>
      <%= f.label:is_deleted,"有効" %>
      <%= f.radio_button:is_deleted,:true %>
      <%= f.label:is_deleted,"退会" %>
    </div>

    <%= f.submit "変更を保存", class:"btn btn-primary" %>
  <% end %>

</div>