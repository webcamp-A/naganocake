<div class="container">
  <h4><%= @customer.last_name %>さんの会員情報編集</h4>
  
  <%= form_with model:@customer, url:admin_customer_path do |f| %>
    <div class="row">
      <%= f.label :"氏名", class:"col-2 col-form-label" %>
      <%= f.text_field :first_name, class:"col-2 mr-3" %>
      <%= f.text_field :last_name, class:"col-2" %>
    </div>
    <div class="row">
      <%= f.label :"フリガナ", class="col-2 col-form-label" %>
      <%= f.text_field :first_name_kana, class:"col-2 mr-3" %>
      <%= f.text_field :last_name_kana, class:"col-2" %>
    </div>
    <div class="row">
      <%= f.label :"郵便番号", class="col-2 col-form-label" %>
      <%= f.text_field :postal_number, class:"col-2" %>
    </div>
    <div class="row">
      <%= f.label :"住所", class="col-2 col-form-label" %>
      <%= f.text_field :address, class:"col-4" %>
    </div>
    <div class="row">
      <%= f.label :"電話番号", class="col-2 col-form-label" %>
      <%= f.text_field :telephone_number, class:"col-2" %>
    </div>
    <div class="row">
      <%= f.label :"メールアドレス", class="col-2 col-form-label" %>
      <%= f.email_field :email, class:"col-2" %>
    </div>
    
    <%= f.submit "変更を保存", class:"btn btn-primary" %>
  <% end %>
    
</div>